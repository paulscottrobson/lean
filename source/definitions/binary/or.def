// ******************************************************************************
//
//							R - Byte/Word Constant
//
// ******************************************************************************

B 	R:<const>
		ora 	#<low>

W 	R:<const>
		ora 	#<low>
		pha
		txa
		ora 	#<high>
		tax
		pla

// ******************************************************************************
//
//							    A - Byte Constant
//
// ******************************************************************************

B 	A:<const>
		ora 	#<low>

// ******************************************************************************
//
//							R - Short/Integer Variable
//
// ******************************************************************************

I 	R:<var>
		ora 	<addr>
		pha
		txa
		ora 	<next>
		tax
		pla

S 	R:<var>
		ora 	<addr>

// ******************************************************************************
//
//							A - Short Variable
//
// ******************************************************************************

S 	A:<var>
		ora 	<addr>

// ******************************************************************************
//
//							A - Indirect
//
// ******************************************************************************

Z 		A : <var>[y]
		ora 	(<addr>),y

Z 		R : <var>[y]
		ora 	(<addr>),y
		pha
		txa
		iny		
		ora 	(<addr>),y
		dey
		tax
		pla
