// ******************************************************************************
//
//							R - Byte/Word Constant
//
// ******************************************************************************

B 	R+<const>
		clc
		adc 	#<low>
		bcc 	*+3
		inx

W 	R+<const>
		clc
		adc 	#<low>
		pha
		txa
		adc 	#<high>
		tax
		pla

// ******************************************************************************
//
//							    A - Byte Constant
//
// ******************************************************************************

B 	A+<const>
		clc
		adc 	#<low>

// ******************************************************************************
//
//							R - Short/Integer Variable
//
// ******************************************************************************

I 	R+<var>
		clc
		adc 	<addr>
		pha
		txa
		adc 	<next>
		tax
		pla

S 	R+<var>
		clc
		adc 	<addr>
		bcc 	*+3
		inx

// ******************************************************************************
//
//							A - Short Variable
//
// ******************************************************************************

S 	A+<var>
		clc
		adc 	<addr>

// ******************************************************************************
//
//							A - Indirect
//
// ******************************************************************************

Z 		A + <var>[y]
		clc
		adc 	(<addr>),y

Z 		R + <var>[y]
		clc
		adc 	(<addr>),y
		pha
		txa
		iny		
		adc 	(<addr>),y
		dey
		tax
		pla
