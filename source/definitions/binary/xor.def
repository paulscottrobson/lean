// ******************************************************************************
//
//							R - Byte/Word Constant
//
// ******************************************************************************

B 	R*<const>
		eor 	#<low>

W 	R*<const>
		eor 	#<low>
		pha
		txa
		eor 	#<high>
		tax
		pla

// ******************************************************************************
//
//							    A - Byte Constant
//
// ******************************************************************************

B 	A*<const>
		eor 	#<low>

// ******************************************************************************
//
//							R - Short/Integer Variable
//
// ******************************************************************************

I 	R*<var>
		eor 	<addr>
		pha
		txa
		eor 	<next>
		tax
		pla

S 	R*<var>
		eor 	<addr>

// ******************************************************************************
//
//							A - Short Variable
//
// ******************************************************************************

S 	A*<var>
		eor 	<addr>

// ******************************************************************************
//
//							A - Indirect
//
// ******************************************************************************

Z 		A * <var>[y]
		eor 	(<addr>),y

Z 		R * <var>[y]
		eor 	(<addr>),y
		pha
		txa
		iny		
		eor 	(<addr>),y
		dey
		tax
		pla
