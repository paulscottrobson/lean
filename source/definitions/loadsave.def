// ******************************************************************************
// ******************************************************************************
//
//		Name : 		loadsave.def
//		Purpose : 	Load constants, Load and Save to memory
//		Author : 	Paul Robson (paul@robsons.org.uk)
//		Created : 	28th October 2019
//
// ******************************************************************************
// ******************************************************************************

// ******************************************************************************
//
//							Load Registers (Constants)
//
// ******************************************************************************

BW 		R = <const>
			lda 	#<low>
			ldx 	#<high>

B 		A = <const>
			lda 	#<low>

B 		Y = <const>
			ldy 	#<low>

// ******************************************************************************
//
// 								Load Registers (Direct)
//
// ******************************************************************************

I 		R = <var>
			lda 	<addr>
			ldx 	<next>

S 		R = <var>
			lda 	<addr>
			ldx 	#0

S 		A = <var>
			lda 	<addr>

S 		Y = <var>				
			ldy 	<addr>

// ******************************************************************************
//
// 								Store Registers (Direct)
//
// ******************************************************************************

I 		<var> = R
			sta 	<addr>
			stx 	<next>

S 		<var> = R
			sta 	<addr>

S 		<var> = A
			sta 	<addr>

S 		<var> = Y				
			sty 	<addr>

// ******************************************************************************
//
//							Load Registers (indirect)
//
// ******************************************************************************

Z 		A = <var>[y]
			lda 	(<addr>),y

Z 		R = <var>[y]			
			iny
			lda 	(<addr>),y
			tax
			dey
			lda 	(<addr>),y

// ******************************************************************************
//
//							Save Registers (indirect)
//
// ******************************************************************************

Z 		<var>[y] = A
			sta 	(<addr>),y

Z 		<var>[y] = R
			sta 	(<addr>),y
			iny
			txa
			sta 	(<addr>),y
			dey
			lda 	(<addr>),y
			